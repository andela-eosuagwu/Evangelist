{
    "name": "emeka/evangelist",
    "description": "This is a light PHP package that helps you access Github user infomation from Github API.",
    "keywords": [
        "Github Api",
        "php Github Api",
        "php Github Evangelist",
        "php Github Evangelist Api",
        "Github Api in PHP"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "emeka",
            "homepage": "https://github.com/andela-eosuagwu/Evangelist",
            "email": "emekaosuagwuandela@gmail.com",
            "role": "Software Developer"
        }
    ],
    "require": {
        "php" : ">=5.5.9"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*"
    },
    "autoload": {
        "psr-4": {
            "Emeka\\Evangelist\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
